   @using (Html.BeginForm())
   {        
    <div id="logon" class="section-content">
				<div class="row">
					<div class="col-md-12">
						<div class="section-title">
							<h2>Log On</h2>
						</div> <!-- /.section-title -->
					</div> <!-- /.col-md-12 -->
				</div> <!-- /.row -->
				
				<div class="row contact-form">
              
					<div class="col-md-7">
						<label for="name-id" class="required">Username:</label>
						@Html.TextBoxFor(m => m.UserName, new { @class = "form-control login-field", placeholder = "Enter Username" }) 
                   
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "vallog" })
					</div> <!-- /.col-md-4 -->
					<div class="col-md-7">
						<label for="email-id" class="required">Password:</label>
						 @Html.PasswordFor(m => m.Password, new { @class = "form-control login-field", placeholder = "Enter Password" })
                         @Html.ValidationMessageFor(m => m.Password, "", new { @class = "vallog" })
					</div> <!-- /.col-md-4 -->
                   
					<div class="col-md-12">
						<div class="submit-btn">
                        <a href="#">
                              <input type="submit" class="largeButton logonBgColor" value="Sign me in" style="width:28%;height:40px;color:White;font-weight:500;" />
                        </a>
							
						</div> <!-- /.submit-btn -->
					</div> <!-- /.col-md-12 -->
				</div>
			</div> <!-- /#logon -->
   }